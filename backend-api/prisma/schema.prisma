generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Student {
  id                  String  @id @default(auto()) @map("_id") @db.ObjectId
  registration_number String  @unique
  math                Float?
  literature          Float?
  foreign_language    Float?
  physics             Float?
  chemistry           Float?
  biology             Float?
  history             Float?
  geography           Float?
  civic_education     Float?
  foreign_language_code String?
}